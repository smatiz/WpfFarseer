<UserControl x:Class="WpfFarseerEditor.wpf.XamlTextEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
            xmlns:l="clr-namespace:WpfFarseerEditor.wpf"
            xmlns:kaxaml="clr-namespace:Kaxaml.Controls;assembly=Kaxaml"
             d:DesignHeight="300" d:DesignWidth="300"
             >
    <kaxaml:KaxamlTextEditor
            ConvertTabs="true"
            TextChanged="xamlEditor_TextChanged"
            ConvertTabsCount="1"
            ShowLineNumbers="true"
            EnableSyntaxHighlighting="true"
            EnableXmlFolding="true"
            IsCodeCompletionEnabled="true"
            Text="{Binding Code, Mode=TwoWay}">
    </kaxaml:KaxamlTextEditor>
</UserControl>
