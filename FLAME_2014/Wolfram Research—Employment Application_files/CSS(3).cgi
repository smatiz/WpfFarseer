/*  for "new" form style, as in 2008 summerschool applications */

form { padding: 0px; margin: 0px; }

.required { color: #FF0000; }

#formWrapper {
    margin: 30px 0px 0px 0px;
    padding: 0px;
    width: 100%;
    background: #F4F4F4;
    border: 1px solid #CDCDCD; 
    }

div.topBar {
    height: 7px;
    background: #F6B118;
    }
    
div.formContent {
    width: 495px;
    padding: 5px 10px 0px 10px; 
    }

.inputContact {
    text-align: right;
    margin-right: 35px;
    margin-top: 18px;
    font-weight: bold;
    white-space: nowrap;
    }
.inputContact input {
    border: 1px solid #999999;
    background-color: #ffffff !important;
    width: 275px; /* may have to override in embedded stylesheet  if label text is too long */
    font-weight: normal;
    }

table.radioBtn { 
    border-collapse: collapse;
    margin-top: 18px;
    white-space: nowrap;
    }

.inputMore {
    margin: 25px 35px 0px 35px;
    font-weight: bold;
    }
.inputMore textarea {
    margin-top: 5px;
    border: 1px solid #999999;
    background-color: #ffffff;
    width: 100%;
    }

.submitBox {
    margin: 25px 35px 10px 35px;
    }
.submitBox input {
    vertical-align: middle;
    margin: 0px 50px;
    }