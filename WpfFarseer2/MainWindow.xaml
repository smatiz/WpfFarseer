<Window x:Class="WpfFarseer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:l="clr-namespace:WpfFarseer"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <l:FarseerCanvas Grid.Row="0" StepViewModel="{Binding StepViewModel, ElementName=stepControl}">
            <l:BodyControl x:Name="fallingBody" BodyType="Dynamic"  Canvas.Left="47" Canvas.Top="2" Height="63" Width="54" >
                <l:BodyControl.RenderTransform>
                    <TranslateTransform X="30">

                    </TranslateTransform>
                </l:BodyControl.RenderTransform>
                <Polygon Canvas.Left="60" Points="0,0,100,0,100,100" >

                    <Polygon.RenderTransform>
                        <TranslateTransform X="90">
                            
                        </TranslateTransform>
                    </Polygon.RenderTransform>
                </Polygon>
            </l:BodyControl>
            <l:BodyControl x:Name="b2" BodyType="Static"  Canvas.Left="10" Canvas.Top="135" Height="63" Width="54" >
                <Polygon Canvas.Left="130" Points="0,0,200,0,200,200"></Polygon>
            </l:BodyControl>
        </l:FarseerCanvas>
        <l:StepControl x:Name="stepControl"  Grid.Row="1"></l:StepControl>
    </Grid>
</Window>
