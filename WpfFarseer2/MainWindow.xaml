<Window x:Class="WpfFarseer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:l="clr-namespace:WpfFarseer"
        Title="MainWindow" Height="350" Width="525">
    
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50*"/>
                    <RowDefinition Height="5*"/>
                </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
            <Grid.Background>
                <VisualBrush >
                    <VisualBrush.Visual>
                        <l:FarseerCanvas  StepViewModel="{Binding StepViewModel, ElementName=stepControl}">
                            <l:BodyControl BodyType="Dynamic"  Canvas.Left="4.7" Canvas.Top="3.2" Height="6.3" Width="5.4" >
                                <Polygon Points="0,0,10,0,10,10"></Polygon>
                            </l:BodyControl>
                            <l:BodyControl BodyType="Static"  Canvas.Left="4.3" Canvas.Top="19.6" Height="6.3" Width="5.4" >
                                <Polygon Points="0,0,20,0,20,20"></Polygon>
                            </l:BodyControl>
                        </l:FarseerCanvas>
                    </VisualBrush.Visual>
                </VisualBrush>
            </Grid.Background>
        </Grid>
                
                <l:StepControl x:Name="stepControl"  Grid.Row="1"></l:StepControl>
            </Grid>
 
</Window>
