<UserControl x:Class="WpfFarseer.Sample6"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
            xmlns:l3="clr-namespace:WpfFarseer;assembly=SM.WpfFarseer"
            xmlns:l="clr-namespace:SM.Wpf;assembly=SM.Wpf"
        xmlns:l2="clr-namespace:WpfFarseer"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <l2:FarseerPlayerControl x:Name="_farseerPlayer">
            <l2:FarseerPlayerControl.FarseerCanvas>
                <l3:FarseerCanvas  Grid.Row="0" >
                    <l:BodyControl BodyType="Breakable" X="110" Angle="9">
                        <l:SkinnedShapeControl>
                            <Canvas >
                                <Button Background="Red"  Width="40" Height="40">ciao</Button>
                                <Button Background="Blue" Canvas.Left="20" Canvas.Top="10" Width="10" Height="40">ciao</Button>
                            </Canvas>
                        </l:SkinnedShapeControl>
                        <l:ConvexPolygonShapeControl Density="123" PointCollection="60,30,60,20,50,20,50,30" Fill="Black">
                        </l:ConvexPolygonShapeControl>
                    </l:BodyControl>
                  
                    <l:BodyControl Id="b" >
                        <l:ConvexPolygonShapeControl Density="123" PointCollection="0 200,300 200,150 250" Fill="Green">
                        </l:ConvexPolygonShapeControl>
                    </l:BodyControl>

                </l3:FarseerCanvas>
            </l2:FarseerPlayerControl.FarseerCanvas>
        </l2:FarseerPlayerControl>


        <Canvas Name="_resultCanvas"></Canvas>
    </Grid>
</UserControl>
