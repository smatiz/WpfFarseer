<UserControl x:Class="WpfFarseer.Sample4"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:sm="sm:farseer"
             xmlns:l="clr-namespace:WpfFarseer" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <sm:FarseerPlayerControl x:Name="_farseerPlayer">
            <sm:FarseerPlayerControl.Farseer>
                <sm:Farseer   >
                    <l:MyFirstFarseerUserControl Transform="0,0"></l:MyFirstFarseerUserControl>
                    <l:MyFirstFarseerUserControl Transform="200,0,30"></l:MyFirstFarseerUserControl>
                </sm:Farseer>
            </sm:FarseerPlayerControl.Farseer>
        </sm:FarseerPlayerControl>
    </Grid>
</UserControl>
