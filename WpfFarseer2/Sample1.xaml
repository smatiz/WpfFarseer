<UserControl x:Class="WpfFarseer.Sample1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            xmlns:l3="clr-namespace:WpfFarseer;assembly=SM.WpfFarseer"
            xmlns:l="clr-namespace:SM.Wpf;assembly=SM.Wpf"
        xmlns:l2="clr-namespace:WpfFarseer"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <l2:FarseerPlayerControl x:Name="_farseerPlayer">
            <l2:FarseerPlayerControl.FarseerCanvas>
                <l3:FarseerCanvas  Grid.Row="0" >
                    <l:BodyControl Id="fallingBody"  BodyType="Dynamic"  >
                        <l:ConvexPolygonShapeControl Density="123"  >
                            <Polygon Points="0 0,100 0,100 100" Fill="Red"></Polygon>
                        </l:ConvexPolygonShapeControl>
                        <l:BodyControl.Flags>
                            <l:FlagControl Id="x" X="50" Y="30">
                            </l:FlagControl>
                        </l:BodyControl.Flags>
                    </l:BodyControl>
                    <l:BodyControl Id="b2"   BodyType="Static"   >
                        <l:ConvexPolygonShapeControl Density="123"  >
                            <Polygon Points="100,100,200,0,200,200" Fill="Gray"></Polygon>
                        </l:ConvexPolygonShapeControl>
                        <l:BodyControl.Flags>
                            <l:FlagControl Id="y" X="150" Y="150">

                        </l:FlagControl>
                        </l:BodyControl.Flags>
                    </l:BodyControl>

                    <l:RopeJointControl Id="jointC" TargetFlagIdA="x" TargetFlagIdB="y" >
                    </l:RopeJointControl>
                </l3:FarseerCanvas>
            </l2:FarseerPlayerControl.FarseerCanvas>
        </l2:FarseerPlayerControl>
        
    </Grid>
</UserControl>
