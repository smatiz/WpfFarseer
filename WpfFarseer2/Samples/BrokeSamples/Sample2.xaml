<UserControl x:Class="WpfFarseer.Sample2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:sm="sm:farseer"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <sm:FarseerPlayerControl x:Name="_farseerPlayer" Debug="True">
            <sm:FarseerPlayerControl.Farseer>
                <sm:Farseer >
                    <sm:Body BodyType="Breakable">
                        <sm:Polygon Density="123" Points="0 0,100 0,100 100" Fill="Blue">
                        </sm:Polygon>
                        <sm:Polygon Density="123" Points="100,50,150,0,150,100" Fill="Green">
                        </sm:Polygon>
                    </sm:Body>
                    <sm:Body Id="b">
                        <sm:Polygon Density="123"  Points="0 200,300 200,150 250" Fill="Black">
                        </sm:Polygon>
                    </sm:Body>
                </sm:Farseer>
            </sm:FarseerPlayerControl.Farseer>
        </sm:FarseerPlayerControl>
    </Grid>
</UserControl>
