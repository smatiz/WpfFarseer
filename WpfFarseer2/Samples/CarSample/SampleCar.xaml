<sm:User x:Class="WpfFarseer.SampleCar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:sm="sm:farseer"
            x:Name="_this" Id="car"
                DesignZoom="10"
             mc:Ignorable="d" >
    <sm:Body BodyType="Dynamic" Id="wheelR">
        <sm:Circle X="10" Y="10" Radius="10" Fill="Red">
        </sm:Circle>
    </sm:Body>
    <sm:Body BodyType="Dynamic" Id="wheelF">
        <sm:Circle X="20" Y="10" Radius="10" Fill="Red">
        </sm:Circle>
    </sm:Body>
    <sm:Body Id="body" >
        <sm:Polygon Density="123" Points="0 0,30 0,30 13,0 13" Fill="Green">
        </sm:Polygon>
    </sm:Body>
</sm:User>