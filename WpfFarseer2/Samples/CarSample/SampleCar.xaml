<UserControl x:Class="WpfFarseer.SampleCar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:sm="sm:farseer"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <sm:FarseerPlayerControl InDebug="True" Zoom="10" >
            <sm:Farseer>
                <sm:Body Id="b" BodyType="Breakable">
                    <sm:Polygon Points="0 0,30 0,30 2,0 2" Fill="Black"></sm:Polygon>
                    <sm:Circle Radius="5" X="10" Y="10" ></sm:Circle>
                    <sm:Ellipse RadiusX="5" RadiusY="7" X="20" Y="10" ></sm:Ellipse>
                </sm:Body>
                <sm:Body Id="b2">
                    <sm:Polygon Density="123"  Points="0 20,30 20,15 25" Fill="Black">
                    </sm:Polygon>
                </sm:Body>
            </sm:Farseer>
        </sm:FarseerPlayerControl>
    </Grid>
</UserControl>
