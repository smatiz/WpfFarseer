<UserControl x:Class="WpfFarseer.StepControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:l="clr-namespace:WpfFarseer"
             d:DataContext="{d:DesignInstance Type=l:StepViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="100" >
    <UserControl.DataContext>
        <l:StepViewModel x:Name="_stepViewModel"></l:StepViewModel>
    </UserControl.DataContext>
    <StackPanel Orientation="Horizontal">
        <Button Width="100" Command = "{Binding PlayCommand}">Play</Button>
        <Button Width="100" Command = "{Binding PauseCommand}">Pause</Button>
        <Button Width="100" Command = "{Binding VoidCommand}">Stop</Button>
        <Button Width="100" Command = "{Binding VoidCommand}">Forward</Button>
        <Button Width="100" Command = "{Binding BackCommand}">Backward</Button>
    </StackPanel>
</UserControl>
