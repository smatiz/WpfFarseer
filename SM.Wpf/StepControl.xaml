<UserControl x:Class="SM.Wpf.StepControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="100" >
   
    <StackPanel Orientation="Horizontal">
        <Button Width="100" Command = "{Binding PlayCommand}">Play</Button>
        <Button Width="100" Command = "{Binding PauseCommand}">Pause</Button>
        <Button Width="100" Command = "{Binding RestartCommand}">Restart</Button>
        <Button Width="100" Command = "{Binding XnaCommand}">Xna</Button>
        <Button Width="100" Command = "{Binding VoidCommand}">Forward</Button>
        <Button Width="100" Command = "{Binding BackCommand}">Backward</Button>

        <!--<Button Width="100" Command = "{Binding SaveCommand}">Save</Button>-->
        <!--<Button Width="100" Command = "{Binding LoadCommand}">Load</Button>-->
    </StackPanel>
</UserControl>
